{
	"name": "firebase-cloud-functions-trial",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"type": "module",
	"engines": {
		"node": "16"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.5",
		"@commitlint/config-conventional": "^17.6.5",
		"@firebaseextensions/fs-bq-schema-views": "^0.4.7",
		"@mdi/font": "^7.2.96",
		"@rushstack/eslint-patch": "^1.3.2",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vue/eslint-config-prettier": "^7.1.0",
		"@vuepic/vue-datepicker": "^4.5.1",
		"camelcase-keys": "^8.0.2",
		"crypto-js": "^4.1.1",
		"eslint": "^8.43.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-import-resolver-custom-alias": "^1.3.2",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-vue": "^9.15.0",
		"eslint-plugin-vuetify": "^2.0.2",
		"firebase": "^9.22.2",
		"firebase-tools": "^12.4.0",
		"firebaseui": "^6.0.2",
		"license-checker": "^25.0.1",
		"lint-staged": "^13.2.2",
		"lodash": "^4.17.21",
		"luxon": "^3.3.0",
		"npm-check-updates": "^16.10.12",
		"pinia": "^2.1.4",
		"prettier": "^2.8.8",
		"sass": "^1.63.4",
		"simple-git-hooks": "^2.8.1",
		"snakecase-keys": "^5.4.5",
		"vite": "^4.3.9",
		"vite-plugin-eslint": "^1.8.1",
		"vite-plugin-node-polyfills": "^0.9.0",
		"vite-plugin-vuetify": "^1.0.2",
		"vue": "^3.3.4",
		"vue-i18n": "^9.2.2",
		"vue-router": "^4.2.2",
		"vuetify": "^3.3.3",
		"webfontloader": "^1.6.28"
	},
	"scripts": {
		"dev": "vite --mode localdev",
		"build": "vite build",
		"preview": "vite preview",
		"start": "NODE_ENV=local firebase emulators:start",
		"firebase:host:preview": "firebase hosting:channel:deploy test_preview --expires 12h",
		"firebase:host:list": "firebase hosting:channel:list",
		"firebase:host:preview:delete": "firebase hosting:channel:delete test_preview",
		"firebase:host:disable": "firebase hosting:disable",
		"gen:schema:view": "npx @firebaseextensions/fs-bq-schema-views --non-interactive --project=fir-cloud-functions-trial --dataset=firestore_export --table-name-prefix=users --schema-files=./gen-schema-view/test_schema.json",
		"bq:local:query:users_schema_test_schema_changelog": "bq --api http://localhost:9050 query --project_id=fir-cloud-functions-trial 'SELECT * FROM firestore_export.users_schema_test_schema_changelog'",
		"pull:indexes": "firebase firestore:indexes > firestore.indexes.json",
		"deploy": "firebase deploy",
		"deploy:exclude:hosting": "firebase deploy --only functions,firestore,extensions",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
		"style": "prettier --ignore-unknown --write .",
		"ncu": "npm-check-updates",
		"prepare": "npx simple-git-hooks",
		"postinstall": "cd firebase-cloud-functions && yarn install"
	},
	"lint-staged": {
		"*": "npx prettier --ignore-unknown --write",
		"*.vue|*.js|*.cjs|*.mjs": "npx eslint --ignore-path .gitignore",
		"./yarn.lock": "npx license-checker --development --failOn \"GPL;AGPL;LGPL;NGPL\" --summary",
		"./functions/yarn.lock": "npx license-checker --start ./functions --production --failOn \"GPL;AGPL;LGPL;NGPL\" --summary"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged --verbose",
		"commit-msg": "npx commitlint -e"
	}
}
